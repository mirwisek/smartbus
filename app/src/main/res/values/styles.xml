    <style name="viewParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="ButtonOutlinedChecked" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconTint">@color/colorPrimaryDark</item>
        <item name="strokeColor">@color/colorPrimaryDark</item>
        <item name="iconGravity">end</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:checkable">true</item>
        <item name="cornerRadius">6dp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="textStartPadding">50dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="rippleColor">@color/colorRipple</item>
    </style>
