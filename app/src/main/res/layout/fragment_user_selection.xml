<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_grad_red_light"
    tools:context=".UserSelectionFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select your usage"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:alpha="0.6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnDriver"/>

    <Button
        android:id="@+id/btnDriver"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Driver"
        android:backgroundTint="@color/white"
        android:textColor="@color/pink_light"
        android:padding="20dp"
        android:textSize="20sp"
        android:layout_marginStart="@dimen/m_lg"
        android:layout_marginEnd="@dimen/m_lg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnStudent"
        app:layout_constraintVertical_chainStyle="packed"/>

    <Button
        android:id="@+id/btnStudent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Student"
        android:backgroundTint="@color/white"
        android:textColor="@color/pink_light"
        android:padding="20dp"
        android:textSize="20sp"
        android:layout_marginStart="@dimen/m_lg"
        android:layout_marginEnd="@dimen/m_lg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnDriver"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_chainStyle="packed"/>
</androidx.constraintlayout.widget.ConstraintLayout>